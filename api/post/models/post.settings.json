{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 2000
    },
    "authors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "blogPosts",
      "dominant": true
    },
    "archived": {
      "type": "boolean",
      "private": false
    },
    "body": {
      "type": "text",
      "required": true
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "text"
    },
    "postCover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "comments": {
      "collection": "comments"
    }
  }
}